@model E_Recarga.Models.User
@{
    ViewBag.Title = "UserAccountDetails";
}
<br />
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Detalhes da Conta</h1>
    </div>
</section>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>E-mail</dt>
        <dd>@ViewBag.email</dd>

        <dt>@Html.DisplayNameFor(model => model.Nif)</dt>
        <dd>@Html.DisplayFor(model => model.Nif)</dd>

        <dt>@Html.DisplayNameFor(model => model.NumeroCC)</dt>
        <dd>@Html.DisplayFor(model => model.NumeroCC)</dd>

        <dt>@Html.DisplayNameFor(model => model.TitularCC)</dt>
        <dd>@Html.DisplayFor(model => model.TitularCC)</dd>

        <dt>@Html.DisplayNameFor(model => model.CCV)</dt>
        <dd>@Html.DisplayFor(model => model.CCV)</dd>
    </dl>

    <p>@Html.ActionLink("Gerir Conta", "Index", null, new { @class = "btn btn-secondary" }) 
    @Html.ActionLink("Editar", "UserAccountEdit", null, new { @class = "btn btn-primary" })</p>
</div>

