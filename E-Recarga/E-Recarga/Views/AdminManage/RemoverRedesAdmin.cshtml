@model E_Recarga.Models.RedeProprietaria

@{
    ViewBag.Title = "RemoverRedesAdmin";
}

<br />
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Remover Rede Proprietária</h1>
        <p class="lead text-muted mb-0">Remover todos os dados relativos à rede proprietária.</p>
    </div>
</section>

<div>
    <h4>Estação</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nif)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nif)
        </dd>

    </dl>
    @using (Html.BeginForm("RemoverRedesAdmin", "AdminManage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            @Html.ActionLink("Lista de Redes Proprietárias", "ListarRedesAdmin")
        </div>
    }
</div>

