@model E_Recarga.Models.Reserva
@{
    ViewBag.Title = "CancelarReserva";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Cancelar Reserva</h1>
    </div>
</section>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ReservaId)</dt>
        <dd>@Html.DisplayFor(model => model.ReservaId)</dd>

        <dt>@Html.DisplayNameFor(model => model.Posto.Estacao.RedeProprietaria.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Posto.Estacao.RedeProprietaria.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Posto.Estacao.Cidade)</dt>
        <dd>@Html.DisplayFor(model => model.Posto.Estacao.Cidade)</dd>

        <dt>@Html.DisplayNameFor(model => model.Posto.Estacao.Localizacao)</dt>
        <dd>@Html.DisplayFor(model => model.Posto.Estacao.Localizacao)</dd>

        <dt>@Html.DisplayNameFor(model => model.Posto.Estacao.Preco)</dt>
        <dd>@Html.DisplayFor(model => model.Posto.Estacao.Preco)€</dd>

        <dt>@Html.DisplayNameFor(model => model.PostoId)</dt>
        <dd>@Html.DisplayFor(model => model.PostoId)</dd>

        <dt>@Html.DisplayNameFor(model => model.Data)</dt>
        <dd>@Html.DisplayFor(model => model.Data)</dd>

        <dt>@Html.DisplayNameFor(model => model.HoraInicio)</dt>
        <dd>@Html.DisplayFor(model => model.HoraInicio)</dd>

        <dt>@Html.DisplayNameFor(model => model.HoraFim)</dt>
        <dd>@Html.DisplayFor(model => model.HoraFim)</dd>
    </dl>
    @using (Html.BeginForm("CancelarReserva", "UserManage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-actions no-color">
            <input type="submit" value="Cancelar" class="btn btn-danger" /> |
            @Html.ActionLink("Histórico de Reservas", "HistoricoReservas")
        </div>
    }
</div>
